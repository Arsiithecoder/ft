class GardenError(Exception):
    """Raised for general garden-related errors."""
    pass

class PlantError(GardenError):
    """Raised for plan-specific issues in the garden."""
    pass

class WaterError(GardenError):
    """Raised for watering-related issues in the garden."""
    pass

def custom_errors_test():
    print("=== Custom Garden Errors Demo ===")
    try:
        print ("Testing PlantError...")
        raise PlantError("The tomato plant is wilting!")
    except PlantError as pe:
        print(f"Caught PlantError: {pe}\n")
    
    try:
        print ("Testing WaterError...")
        raise WaterError("The garden is overwatered!")
    except WaterError as we:
        print(f"Caught WaterError: {we}\n")

    print("Testing catching all garden errors...")
    try:
        raise PlantError("The tomato plant is wilting!")
    except GardenError as ge:
        print(f"Caught GardenError: {ge}!\n")
    try:
        raise WaterError("The garden is overwatered!")
    except GardenError as ge:
        print(f"Caught GardenError: {ge}!\n")
    print("All custom error tests completed.")

if __name__ == "__main__":
    custom_errors_test()
